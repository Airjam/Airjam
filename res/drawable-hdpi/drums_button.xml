<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#33B5E5"
                android:endColor="#33B5E5"
                android:angle="270" />
            <corners
                android:radius="1000px" />

        </shape>
    </item>

    <item android:state_focused="true" >
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#0099CC"
                android:endColor="#0099CC"
                android:angle="270" />
            <corners
                android:radius="40dp" />

        </shape>
    </item>

    <item>        
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#0099CC"
                android:endColor="#0099CC"
                android:angle="270" />
            <corners
                android:radius="2sp" />

        </shape>
    </item>
</selector>