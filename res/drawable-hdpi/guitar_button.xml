<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#FF8800"
                android:endColor="#FF8800"
                android:angle="270" />
            <corners
                android:radius="40dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#FFBB33"
                android:endColor="#FFBB33"
                android:angle="270" />
            <corners
                android:radius="40dp" />
        </shape>
    </item>

    <item>        
        <shape
            android:shape="oval">
            <gradient
                android:startColor="#FFBB33"
                android:endColor="#FFBB33"
                android:angle="270" />
            <corners
                android:radius="40dp" />
        </shape>
    </item>
</selector>